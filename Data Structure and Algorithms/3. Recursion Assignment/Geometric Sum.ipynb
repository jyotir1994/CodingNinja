    "def geometric(n):\n",
    "    \n",
    "    if n == 0:\n",
    "        return 1\n",
    "    return 1/pow(2,n)+ geometric(n-1)\n",
    "\n",
    "n = int(input())\n",
    "val = geometric(n)\n",
    "print('%.5f' % val)"
   ]
